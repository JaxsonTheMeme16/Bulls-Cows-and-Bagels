import random

isPlaying = True

while isPlaying:

    aiChoice = random.randint(100, 999)

    choice = float(input("Guess the number I chose! : "))

    if aiChoice == choice:
        print("Correct!")

    elif aiChoice > choice:
        print("Incorrect!")
        print("Higher!")

    elif aiChoice < choice:
        print("Incorrect!")
        print("Lower!")
